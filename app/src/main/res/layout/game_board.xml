<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/c00"
        style="@style/cell"
        android:contentDescription="0" />

    <ImageView
        android:id="@+id/c01"
        style="@style/cell"
        android:layout_toRightOf="@+id/div1"
        android:contentDescription="1" />


    <ImageView
        android:id="@+id/c02"
        style="@style/cell"
        android:layout_toRightOf="@+id/div2"
        android:contentDescription="2" />

    <ImageView
        android:id="@+id/c10"
        style="@style/cell"
        android:layout_below="@+id/div3"
        android:contentDescription="3" />

    <ImageView
        android:id="@+id/c11"
        style="@style/cell"
        android:layout_below="@+id/div3"
        android:layout_toRightOf="@+id/div1"
        android:contentDescription="4" />

    <ImageView
        android:id="@+id/c12"
        style="@style/cell"
        android:layout_below="@+id/div3"
        android:layout_toRightOf="@+id/div2"
        android:contentDescription="5" />

    <ImageView
        android:id="@+id/c20"
        style="@style/cell"
        android:layout_below="@+id/div4"
        android:contentDescription="6" />

    <ImageView
        android:id="@+id/c21"
        style="@style/cell"
        android:layout_below="@+id/div4"
        android:layout_toRightOf="@+id/div1"
        android:contentDescription="7" />

    <ImageView
        android:id="@+id/c22"
        style="@style/cell"
        android:layout_below="@+id/div4"
        android:layout_toRightOf="@+id/div2"
        android:contentDescription="8" />

    <View
        android:id="@+id/h00"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c00"
        android:layout_alignTop="@id/c00" />

    <View
        android:id="@+id/h01"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c01"
        android:layout_alignTop="@id/c01" />

    <View
        android:id="@+id/h02"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c02"
        android:layout_alignTop="@id/c02" />

    <View
        android:id="@+id/h10"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c10"
        android:layout_alignTop="@id/c10" />

    <View
        android:id="@+id/h11"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c11"
        android:layout_alignTop="@id/c11" />

    <View
        android:id="@+id/h12"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c12"
        android:layout_alignTop="@id/c12" />

    <View
        android:id="@+id/h20"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c20"
        android:layout_alignTop="@id/c20" />

    <View
        android:id="@+id/h21"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c21"
        android:layout_alignTop="@id/c21" />

    <View
        android:id="@+id/h22"
        style="@style/cell_highlight"
        android:layout_alignLeft="@id/c22"
        android:layout_alignTop="@id/c22" />

    <ImageView
        android:id="@+id/div1"
        android:layout_width="5dip"
        android:layout_height="@dimen/bar_dimen"
        android:layout_toRightOf="@id/c00"
        android:background="@color/mt_black" />

    <ImageView
        android:id="@+id/div2"
        android:layout_width="5dip"
        android:layout_height="@dimen/bar_dimen"
        android:layout_toRightOf="@id/c01"
        android:background="@color/mt_black" />

    <ImageView
        android:id="@+id/div3"
        android:layout_width="@dimen/bar_dimen"
        android:layout_height="5dip"
        android:layout_below="@id/c00"
        android:background="@color/mt_black" />

    <ImageView
        android:id="@+id/div4"
        android:layout_width="@dimen/bar_dimen"
        android:layout_height="5dip"
        android:layout_below="@id/c10"
        android:background="@color/mt_black" />
</RelativeLayout>